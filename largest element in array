class Solution {
  public:
    int largest(vector<int> &arr) {
        // code here
        if(arr.empty())
        {
            return 0;
        }
        
        int i,max;
        int n=arr.size();
        max=arr[0];
        
        for(i=0;i<n;i++)
        {
          if(arr[i]>max)
          {
              max=arr[i];
          }
          
        }
        return max;
    }
};
